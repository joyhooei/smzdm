<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp10"
    android:layout_marginLeft="@dimen/dp10"
    android:layout_marginRight="@dimen/dp10"
    android:background="@color/white"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:padding="@dimen/dp5"
            android:text="@string/message"
            android:textSize="@dimen/sp14"
            android:textColor="@color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:background="@color/greyBg" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp120"
            android:background="@color/white">


            <ImageView
                android:id="@+id/mainNewsImage"
                android:layout_width="@dimen/dp100"
                android:layout_height="@dimen/dp100"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:background="@color/greyBg"
                android:layout_marginLeft="@dimen/dp10" />

            <TextView
                android:id="@+id/mainNewsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/mainNewsImage"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_toRightOf="@+id/mainNewsImage"
                android:ellipsize="end"
                android:maxLines="2"
                android:lines="2"
                android:minHeight="@dimen/dp30"
                android:paddingRight="@dimen/dp10"
                android:textColor="@color/black"
                android:textSize="@dimen/sp15"
                android:textStyle="bold"
                tools:text="@string/app_name" />

            <TextView
                android:id="@+id/mainNewsPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mainNewsTitle"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_toRightOf="@+id/mainNewsImage"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingRight="@dimen/dp10"
                android:textColor="@color/red"
                android:textSize="@dimen/sp13"
                tools:text="@string/app_name" />


            <TextView
                android:id="@+id/mainNewsRzlx"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp15"
                android:layout_alignBottom="@+id/mainNewsImage"
                android:layout_alignLeft="@+id/mainNewsPrice"
                android:background="@drawable/shape_pink"
                android:ellipsize="end"
                android:maxWidth="@dimen/dp50"
                android:paddingLeft="@dimen/dp5"
                android:paddingRight="@dimen/dp5"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp10"
                tools:text="@string/app_name" />

            <TextView
                android:id="@+id/mainNewsTime"
                android:layout_alignTop="@+id/mainNewsRzlx"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp15"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_toRightOf="@+id/mainNewsRzlx"
                android:background="@drawable/shape_pink"
                android:ellipsize="end"
                android:maxWidth="@dimen/dp50"
                android:paddingLeft="@dimen/dp5"
                android:paddingRight="@dimen/dp5"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/sp10"
                tools:text="@string/app_name" />


            <TextView
                android:id="@+id/mainNewsWorth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/mainNewsRzlx"
                android:layout_marginRight="@dimen/dp10"
                android:textSize="@dimen/sp12"
                tools:text="10" />


            <TextView
                android:textSize="@dimen/sp12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mainNewsWorthTv"
                android:text="@string/worth"
                android:layout_marginRight="@dimen/dp5"
                android:textColor="@color/colorAccent"
                android:layout_toLeftOf="@+id/mainNewsWorth"
                android:layout_alignBottom="@+id/mainNewsWorth"
                />


            <TextView
                android:textSize="@dimen/sp12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mainNewsComment"
                tools:text="12"
                android:layout_marginRight="@dimen/dp10"
                android:layout_toLeftOf="@+id/mainNewsWorthTv"
                android:layout_alignBottom="@+id/mainNewsWorthTv"
                />

            <ImageView
                android:layout_toLeftOf="@+id/mainNewsComment"
                android:layout_alignBottom="@+id/mainNewsComment"
                android:layout_width="@dimen/dp15"
                android:layout_height="@dimen/dp15"
                android:layout_marginRight="@dimen/dp5"
                android:src="@drawable/ic_article_24dp"
                android:scaleType="centerCrop"
                />

        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>