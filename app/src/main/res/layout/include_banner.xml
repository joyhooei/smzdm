<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp8"
        android:layout_marginRight="@dimen/dp8"
        android:layout_marginTop="@dimen/dp10"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/dp5"
        android:elevation="@dimen/dp5"
        app:cardElevation="@dimen/dp5">


        <com.ppjun.android.ppbannerview.PPBannerView
            android:id="@+id/includeBanner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp150"
            app:pp_indicatorGravity="right"
            app:pp_imageViewScaleType="CENTER_CROP"
            app:pp_indicatorSelectedSrc="@color/colorAccent"
            app:pp_indicatorUnSelectedSrc="@color/bg"
            app:pp_interval="5000" />
    </android.support.v7.widget.CardView>
</RelativeLayout>