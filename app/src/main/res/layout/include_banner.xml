<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<com.ppjun.android.smzdm.mvp.ui.widget.AutoCardView
    android:layout_width="match_parent"
    android:elevation="10px"
    app:cardElevation="10px"
    android:layout_marginTop="30px"
    android:layout_marginLeft="20px"
    android:layout_marginBottom="20px"
    android:layout_marginRight="20px"
    android:layout_height="wrap_content">



    <com.ppjun.android.ppbannerview.PPBannerView
        android:id="@+id/includeBanner"
        android:layout_width="match_parent"
        android:layout_height="430px"
        app:pp_interval="5000"

        app:pp_indicatorGravity="right"
        app:pp_indicatorSelectedSrc="@color/colorAccent"
        app:pp_indicatorUnSelectedSrc="@color/bg" />
</com.ppjun.android.smzdm.mvp.ui.widget.AutoCardView>
</RelativeLayout>